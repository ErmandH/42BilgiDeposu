@model IEnumerable<Ecole42Entity.Entity.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section scripts{ 
    <script src="~/js/list-project.js"></script>
}

<div class="container ml-0 mt-0">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Proje Listesi</h4>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <a type="button" href="/admin/add-project" class="btn btn-primary">Veri Ekle</a>
                <div class="input-group search-area right d-lg-inline-flex d-none">
                    <input type="text" id="search-bar" class="form-control" placeholder="Arama...">
                </div>
            </div>
            <div class="table-responsive">
                <table id="table-list" class="table primary-table-bordered">
                    <thead class="thead-primary">
                        <tr>
                            <th scope="col">Proje Adı</th>
                            <th scope="col">Proje Kategorisi</th>
                            <th scope="col">İŞLEMLER</th>
                        </tr>
                    </thead>
                    <tbody id="table-data">
                        @if (Model.Count() != 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr role="row">
                                    <td>@item.Title</td>
                                    <td>@item.Category.Name</td>
                                    <td>
                                        <a style="color:white; cursor:pointer" class="btnDetail btn btn-primary shadow btn-xs sharp mr-1" href="/admin/update-project/@item.ID"><i class="fa fa-pencil"></i></a>
                                        <a style="color:white; cursor:pointer" class="btnDelete btn btn-danger shadow btn-xs sharp mr-1" data-id="@item.ID"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
