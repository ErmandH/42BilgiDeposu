@model IEnumerable<Ecole42Entity.Entity.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section scripts{ 
    <script src="~/js/list-category.js"></script>
}

<div class="container ml-0 mt-0">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Kategori Listesi</h4>
        </div>
        <div class="card-body">
            <div class="d-flex flex-start align-items-center mb-3">
                <button type="button" id="btnAdd" class="btn btn-primary">Veri Ekle</button>
            </div>
            <div class="table-responsive">
                <table class="table primary-table-bordered">
                    <thead class="thead-primary">
                        <tr>
                            <th scope="col">Kategori Adı</th>
                            <th scope="col">İŞLEMLER</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() != 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr role="row">
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        <a style="color:white; cursor:pointer" class="btnDetail btn btn-primary shadow btn-xs sharp mr-1" data-id="@item.ID"><i class="fa fa-pencil"></i></a>
                                        <a style="color:white; cursor:pointer" class="btnDelete btn btn-danger shadow btn-xs sharp mr-1" data-id="@item.ID"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modalContent"></div>
<div id="addModalContent"></div>

