@model Ecole42Entity.Entity.Admin
@{ 
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
    <script src="/js/add-user.js"></script>
}

<div class="container mt-0 ml-0">
    <form action="/admin/add-user" method="post">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Admin Ekle</h5>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-12 form-group">
                        <label for="Name">Ad</label>
                        <input type="text" name="Name" class="form-control" required />
                    </div>
                    <div class="col-12 form-group">
                        <label for="Surname">Soyad</label>
                        <input type="text" name="Surname" class="form-control" required />
                    </div>
                    <div class="col-12 form-group">
                        <label for="Email">E-Posta</label>
                        <input type="email" name="Email" class="form-control" required />
                    </div>
                    <div class="col-12 form-group">
                        <label for="pass">Şifre</label>
                        <input type="password" name="pass" class="form-control" required />
                    </div>
                    <div class="col-12 form-group">
                        <label for="pass">Şifreyi yeniden girin</label>
                        <input type="password" name="repass" class="form-control" required />
                    </div>
                </div>

            </div>
            <div class="card-footer d-sm-flex justify-content-between align-items-center">
                <button type="button" onclick="addButton()" class="btn btn-primary">Ekle</button>
            </div>
        </div>
    </form>
</div>

